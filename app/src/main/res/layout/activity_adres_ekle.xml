<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.host.e_ticaret.adresEkle"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Adres Kayıt Ekranı"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iltxt"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="il Giriniz" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ilcetxt"
        android:layout_below="@+id/iltxt"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/iltxt"
        android:hint="İlçe Giriniz" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mahalletxt"
        android:layout_below="@+id/ilcetxt"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/ilcetxt"
        android:hint="Mahalle Giriniz" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adresbilgisitxt"
        android:layout_below="@+id/mahalletxt"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/mahalletxt"
        android:hint="Adres Bilgisi Giriniz" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kapinotxt"
        android:layout_below="@+id/adresbilgisitxt"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/adresbilgisitxt"
        android:hint="Kapı No Giriniz" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notbilgisitxt"
        android:layout_below="@+id/kapinotxt"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/kapinotxt"
        android:hint="Not Bilgi Giriniz" />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/button6"
        android:onClick="adresekle"
        android:layout_below="@+id/notbilgisitxt"

        android:layout_alignParentEnd="true"
        android:background="@drawable/ekle" />

</RelativeLayout>
